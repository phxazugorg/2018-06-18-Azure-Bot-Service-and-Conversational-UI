{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "hideOriginalBody": true,
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "https://vpbotlabssa.blob.core.windows.net/public-images/taxi-icon.png",
                  "size": "small",
                  "horizontalAlignment": "left"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Taxi Bot Notification",
                  "size": "extraLarge",
                  "weight": "bolder",
                  "horizontalAlignment": "left"
                }
              ]
            }
          ]
        },
        {
          "id": "tripImage",
          "type": "Image",
          "url": "<TRIPURL>",
          "size": "stretch"
        },
        {
          "type": "TextBlock",
          "text": "Driver arived",
          "weight": "bolder",
          "size": "large",
          "color": "accent"
        },
        {
          "type": "ColumnSet",
          "spacing": "none",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "https://vpbotlabssa.blob.core.windows.net/public-images/ricky.jpg",
                  "size": "medium",
                  "style": "person"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Ricky Jimenez",
                  "weight": "bolder",
                  "wrap": true,
                  "horizontalAlignment": "left"
                },
                {
                  "type": "TextBlock",
                  "spacing": "none",
                  "text": "Lic. # 3334567",
                  "isSubtle": true,
                  "wrap": true,
                  "horizontalAlignment": "left"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Please meet the taxi at the pickup location.",
          "wrap": true
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Car Model:",
              "value": "Toyota Prius"
            },
            {
              "title": "Color:",
              "value": "White"
            },
            {
              "title": "Plate #:",
              "value": "eljodon"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
  ]
}